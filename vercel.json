{
    "version": 2,
    "builds": [
      {
        "src": "api/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/submit-homework", "dest": "/api/server.js" },
      { "src": "/thank-you", "dest": "/public/thank-you.html" }
    ]
  }
  